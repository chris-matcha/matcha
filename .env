# Matcha Application Environment Configuration
# Copy this file to .env and update with your actual values

# Security Configuration
SECRET_KEY=your-secret-key-here-use-long-random-string
FLASK_ENV=development

# API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database Configuration (for future use)
DATABASE_URL=sqlite:///matcha.db

# File Upload Settings
MAX_UPLOAD_SIZE=52428800
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs

# Security Settings
SESSION_TIMEOUT=3600
CSRF_TIME_LIMIT=3600

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100 per hour
RATELIMIT_UPLOAD=10 per minute
RATELIMIT_LOGIN=5 per minute

# CORS Settings (development only)
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# Email Configuration (for future password reset features)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/matcha.log